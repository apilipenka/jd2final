<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="defaultTemplate" template="/jsp/template/default/template.jsp">
        <put-attribute name="header" value="/jsp/template/default/header.jsp"/>
        <put-attribute name="menu" value="/jsp/template/default/menu.jsp"/>
        <put-attribute name="footer" value="/jsp/template/default/footer.jsp"/>
    </definition>

    <definition name="login" template="/jsp/login.jsp"/>

    <definition name="register" template="/jsp/new-user.jsp"/>

    <definition extends="defaultTemplate" name="home">
        <put-attribute name="body" value="/jsp/home.jsp"/>
    </definition>

    <definition extends="defaultTemplate" name="about">
        <put-attribute name="body" value="/jsp/about.jsp"/>
    </definition>

    <definition extends="defaultTemplate" name="admin">
        <put-attribute name="body" value="/jsp/admin.jsp"/>
    </definition>

    <definition extends="defaultTemplate" name="new-user">
        <put-attribute name="body" value="/jsp/new-user.jsp"/>
    </definition>



</tiles-definitions>